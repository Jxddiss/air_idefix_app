<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_historique_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <ImageView
        android:id="@+id/iconAvion"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/avion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />


    <!-- (De ) Aeroport -->

    <TextView
        android:id="@+id/AeroportDe"
        android:layout_width="39dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:text="YUL"
        android:textColor="@color/couleur_principale"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toEndOf="@id/iconAvion"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- (De -> ) Ville -->
    <TextView
        android:id="@+id/VilleDE"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:text="Montreal"
        android:textColor="@color/couleur_principale"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/iconAvion"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- ( -> Vers) Villes -->
    <TextView
        android:id="@+id/VilleVers"
        android:layout_width="78dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:text="Paris"
        android:textColor="@color/couleur_principale"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toEndOf="@id/iconAvion"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ( -> Vers) Aeroport -->
    <TextView
        android:id="@+id/AeroportVers"
        android:layout_width="39dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:text="CDG"
        android:textColor="@color/couleur_principale"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.655"
        app:layout_constraintStart_toEndOf="@id/iconAvion"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ( -> Depart) Date -->
    <TextView
        android:id="@+id/DateDepart"
        android:layout_width="112dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="26 Nov 2023"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/iconAvion"
        app:layout_constraintTop_toBottomOf="@id/VilleDE" />

    <!-- ( -> Return) Date -->
    <TextView
        android:id="@+id/DateReturn"
        android:layout_width="112dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="27 Nov"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toEndOf="@id/iconAvion"
        app:layout_constraintTop_toBottomOf="@id/VilleDE" />

</androidx.constraintlayout.widget.ConstraintLayout>
