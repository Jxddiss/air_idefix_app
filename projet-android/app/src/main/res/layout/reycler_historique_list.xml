<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_historique_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <!-- Icon -->

    <!-- Flight route (departure -> destination) -->

    <ImageView
        android:id="@+id/iconAvion"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/avion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/flightRoute"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Montreal YUL - Paris CDG"
        android:textSize="16sp"
        android:textColor="@color/couleur_principale"
        app:layout_constraintStart_toEndOf="@id/iconAvion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Date -->
    <TextView
        android:id="@+id/flightDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="26 Nov 2023 - 13 Dec 2023"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/iconAvion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flightRoute" />

</androidx.constraintlayout.widget.ConstraintLayout>
